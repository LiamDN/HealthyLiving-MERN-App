<div class="mealkit-desc-box w-50 d-flex flex-column h-100 mx-auto flex-grow-1">
    <div class="mealkit-desc-img d-flex flex-grow-1 h-50" style="background-image: url({{mealkit.imageUrl}});">
        <div class="mealkit-caption-text container w-100 align-items-center align-self-end mealkit-desc-header">
            <div class="row text-center">
                <div class="col">
                    <div>Cooking Time</div>
                    <div>{{mealkit.cookingTime}} minutes</div>
                </div>
                
                <div class="col">
                    <div>Servings</div>
                    <div>{{mealkit.servings}}</div>
                </div>
                <div class="col">
                    <div>Calories</div>
                    <div>{{mealkit.caloriesPerServing}}/serving</div>
                </div>
            </div>
        </div>
    </div>
    <div class="mealkit-desc-text d-flex text-center flex-column align-items-center px-3">
        <div class="mt-3 mb-2 fs-2">{{mealkit.title}}</div>
        <div class="mb-3">{{mealkit.includes}}</div>
        <div class="mb-3">{{mealkit.description}}</div>
        <a href="/customer/add-mealkit/{{mealkit.id}}/" class="btn btn-outline-primary mx-auto mb-4" onclick="showAddedToCartToast()">Buy for ${{mealkit.price}}</a>
    </div>
    
    {{#if toastMessage}}
        <div class="toast position-fixed bottom-0 end-0 m-3 align-items-center" id="liveToast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    {{toastMessage}}
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    {{/if}}
  
    <script>
        var toastLiveExample = document.getElementById('liveToast')
        if (toastLiveExample) {
            var toast = new bootstrap.Toast(toastLiveExample)
            toast.show()
        }
    </script>
</div>